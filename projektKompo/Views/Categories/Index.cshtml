@model IEnumerable<projektKompo.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Kategorie</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Dodaj nową kategorię", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name) (@Html.ActionLink("Recenzji: "+item.Reviews.Count, "Index", "Reviews", new { categoryId = item.Id }, null))
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                <div class="adminLinks">
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                    @*@Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                </div>     
            }
            
        </td>
    </tr>
}

</table>
